<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Preço por Unidade -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço por Unidade"
        android:inputType="numberDecimal" />

    <!-- Quantidade Vendida -->
    <EditText
        android:id="@+id/editQuantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade Vendida"
        android:inputType="number" />

    <!-- Custo Variável por Unidade -->
    <EditText
        android:id="@+id/editCustoVariavel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Custo Variável por Unidade"
        android:inputType="numberDecimal" />

    <!-- Botão para adicionar custo fixo -->
    <Button
        android:id="@+id/btnAdicionarCusto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Adicionar Custo Fixo" />

    <!-- Lista de custos fixos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCustosFixos"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp" />

    <!-- Botão Calcular -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <!-- Resultado -->
    <TextView
        android:id="@+id/textResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Resultado: "
        android:textSize="18sp" />
</LinearLayout>

